@model ProjectMVC.Models.User

@{
    ViewData["Title"] = "Log in";
}


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQb7xOLJAqp2w9n0fM8T595phvts_4W80qexg&usqp=CAU');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        .login-page {
            max-width: 700px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }

            .login-page ul {
                list-style-type: none;
                padding: 0;
            }

            .login-page li {
                margin-bottom: 10px;
                display: flex;
                align-items: center;
            }

        .login-info {
            align-items: center;
        }

        .login-input button {
            height: 30px;
            width: 100px;
            font-size: 16px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            margin-bottom: 20px;
            background-color: #F5E0F1;
        }

            .login-input button:hover {
                background-color: #DB7093;
                color: white;
            }
    </style>
</head>
<body>
    <div class="login-page">
        <form asp-action="Login">
            <ul id="login-list">
                <li>
                    <div class="login-info">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" placeholder="user@gmail.com" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                </li>
                <li>
                    <div class="login-info">
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                </li>
            </ul>
            <div class="login-input">
                <button>Log in</button>
            </div>
        </form>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Back to main page</a>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
